<UserControl x:Class="ImageSquared.UserControl.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSquared.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Browse" Command="{Binding SelectImageCommand}"></MenuItem>
                <MenuItem Header="_Exit" x:Name="menuExit" Click="menuExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit"></MenuItem>
            <MenuItem Header="_View"></MenuItem>
            <MenuItem Header="_Window"></MenuItem>
            <MenuItem Header="_Help"></MenuItem>
            <MenuItem Header="{Binding TestText}"></MenuItem>
        </Menu>
    </Grid>
</UserControl>
